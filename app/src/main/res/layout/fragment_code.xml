<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <ScrollView

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginTop="31dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/codeh" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="250dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        >


                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#cbf71404"
                                >

                                <ImageView
                                    android:layout_width="150dp"
                                    android:layout_height="200dp" />

                                <TextView
                                    android:id="@+id/sahils"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="40dp"
                                    android:layout_marginBottom="7dp"
                                    android:layout_marginStart="149dp"
                                    android:layout_alignParentLeft="true"
                                    android:text="FULL NAME"
                                    android:textStyle="bold"
                                    android:textSize="20sp"/>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/sahils"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginStart="145dp"
                                    android:layout_marginLeft="183dp"
                                    android:layout_marginTop="14dp"
                                    android:text=" SOFT. DEVELOPER"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />


                                <Button
                                    android:id="@+id/membst"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginStart="0dp"
                                    android:layout_marginTop="0dp"
                                    android:background="@android:color/transparent" />
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>



                    </LinearLayout>







                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">


                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#dd308e81"
                                >

                                <ImageView
                                    android:layout_width="150dp"
                                    android:layout_height="200dp"

                                    />

                                <TextView
                                    android:id="@+id/poorva"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="40dp"
                                    android:layout_marginBottom="7dp"
                                    android:layout_marginStart="149dp"
                                    android:layout_alignParentLeft="true"
                                    android:text="FULL NAME"
                                    android:textStyle="bold"
                                    android:textSize="20sp"/>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/poorva"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginStart="150dp"
                                    android:layout_marginLeft="183dp"
                                    android:layout_marginTop="14dp"
                                    android:text="WEB DEVELOPER"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />



                                <Button
                                    android:id="@+id/pbtn"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginStart="0dp"
                                    android:layout_marginTop="0dp"
                                    android:background="@android:color/transparent" />
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">



                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#dd838686"
                                >

                                <ImageView
                                    android:layout_width="150dp"
                                    android:layout_height="200dp"

                                    />

                                <TextView
                                    android:id="@+id/noid"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="40dp"
                                    android:layout_marginBottom="7dp"
                                    android:layout_marginStart="149dp"
                                    android:layout_alignParentLeft="true"
                                    android:text="FULL NAME"
                                    android:textStyle="bold"
                                    android:textSize="20sp"/>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/noid"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginStart="150dp"
                                    android:layout_marginLeft="183dp"
                                    android:layout_marginTop="14dp"
                                    android:text="DESIGNER DEVELOPER"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />



                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginStart="0dp"
                                    android:layout_marginTop="0dp"
                                    android:background="@android:color/transparent" />
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>



        </LinearLayout>


    </ScrollView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:text="WEB AND SOFT. DEVELOPER"
        android:layout_marginTop="1dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:background="@color/lightgreen"/>


</android.support.constraint.ConstraintLayout>